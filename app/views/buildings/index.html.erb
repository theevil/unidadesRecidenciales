<p id="notice"><%= notice %></p>

<h1>Unidades Recidenciales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre Completo</th>
      <th>Nit</th>
      <th>Nombre</th>
      <th>Teléfono</th>
      <th>Dirección</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.nombre_completo%></td>
        <td><%= building.nit %></td>
        <td><%= building.nombre %></td>
        <td><%= building.telefono %></td>
        <td><%= building.direccion %></td>
        <td>
          <% if  building.activo %>
             si
          <% else %>
             no
          <% end %>
        </td>

        <td><%= link_to 'Mostrar', building_path(building) %></td>
        <td><%= link_to 'Editar', edit_building_path(building) %></td>
        <td><%= link_to 'Eliminar', building, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Conjunto Recidencial', new_building_path %>
